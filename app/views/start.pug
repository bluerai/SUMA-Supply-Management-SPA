  body

    //- Transparent pane
    #transparent(onclick="hidePanels()")

    //- New category panel
    .panel#new_category
      input#new_category_name(type="text" placeholder="Neue Kategorie" autofocus title="")
      p.orange(title="Neue Kategorie erstellen" onclick="createCategory()")
        i.fa-regular.fa-square-check(aria-hidden="true")

    //- Edit category panel
    .panel#edit_category
      input#edit_category_name(type="text" placeholder="Kategorie" autofocus title="" value=name)

      .left(style="width: 50%")
        p.lightgrey(title="Kategorie löschen" onclick="deleteCategory()")
          i.fa-solid.fa-trash-can(aria-hidden="true")

      .left(style="width: 50%")
        p.yellow(title="Neuen Namen der Kategorie speichen" onclick="renameCategory()")
          i.fa-regular.fa-square-check(aria-hidden="true")

      .left(style="width: 50%")
        p.yellow(title="Priorität bearbeiten" onclick="toggleCategoryPrio()")
          i.fa-solid.fa-star#category_star(class="prio1" aria-hidden="true")

      .left(style="width: 50%")
        p.orange(title="Sortierung ändern" onclick="changeSort()")
          i.fa.fa-arrows-v(aria-hidden="true")

    //- category list panel
    .panel#select_category
      #category_list
      //- *** Inserted here: category_list.pug

      #new_category
        p.orange(title="Neue Kategorie" onclick="createCategoryPanel()")
          i.fa-regular.fa-square-plus(aria-hidden="true")

    .panel#select_category2
      #category_list2
      //- *** Inserted here: category_list2.pug

    //- New product panel
    .panel#new_product
      input#new_product_name(type="text" placeholder="Neues Product" autofocus title="Produktname" )
      p Vorwarnzeit: 
        select(id="new_pre_alert")
            option(value="7") 7 Tage
            option(value="14") 14 Tage
            option(value="30" selected) 30 Tage
            option(value="60") 60 Tage
            option(value="90") 90 Tage
      textarea(id="new_notes" placeholder="Anmerkungen" defaultValue="")
      p.orange(title="Neues Produkt erstellen" onclick="createProduct()")
        i.fa-regular.fa-square-check(aria-hidden="true")

    //- Edit product panel
    .panel(id="edit_product")
      input(id='edit_product_name' type="text" placeholder="Produktname" autofocus title="Produktname")
      p Vorwarnzeit: 
        select(id="select_pre_alert")
            option(value="7") 7 Tage
            option(value="14") 14 Tage
            option(value="30") 30 Tage
            option(value="60") 60 Tage
            option(value="90") 90 Tage
      textarea(id="edit_notes" placeholder="Anmerkungen" defaultValue="Some notes")

      .left(style="margin-left: auto; margin-right: auto; width: 33%")
        p.lightgrey(itle="Gesamtes Produkt entfernen" onclick="deleteProduct()")
          i.fa-solid.fa-trash-can(aria-hidden="true")

      .left(style="margin-left: auto; margin-right: auto; width: 34%")
        p.yellow(title="Neuen Namen des Produkts speichen" onclick="updateProduct()")
          i.fa-regular.fa-square-check(aria-hidden="true")

      .left(style="margin-left: auto; margin-right: auto; width: 33%")
        p.orange(title="Produkt in andere Kategorie verschieben" onclick="selectMoveToCategoryPanel()")
          i.fa-solid.fa-long-arrow-right(aria-hidden="true")

