#header
  .left 
    img(src="/icons/suma.png" id="logo" width=52 height=52 alt="Logo" onClick="pageRefresh()")          

  .right#dropdown
    button.yellow(title="Kategorie auswählen" onClick="selectGoToCategoryPanel()")
      i.fa-solid.fa-list-ul(aria-hidden="true")

  .right
    button.orange(title="Neues Produkt hinzufügen" onclick="createProductPanel()")
      i.fa-regular.fa-square-plus(aria-hidden="true")
  
  #category_head.pointer(title="Kategorie bearbeiten" onclick="editCategoryPanel('" + category.name + "')") 
    
    #flex_left
      i.fa-solid.fa-star(class="prio" + category.prio style="font-size: 14px")

    #category_name= category.name
    

    #flex_right


#prodlist

  each item in products
  
    div.prod(id="prod" + item.id )
      
      .box

        .right
          button.darkgrey(title="Produktdetails bearbeiten" onclick="toggleDetails('" + item.id + "')")
              i.fa.fa-caret-down(aria-hidden="true")

        h2.pointer(style="text-align: left" onclick="editProductPanel(" + item.id + ",'" + item.name + "')" title="Produkt bearbeiten")               
          i.fa-solid.fa-circle(id="state" + item.id style="font-size:14px; padding-left: 5px; padding-right: 5px; color: " + item.state)
          span(id="product_name" + item.id) #{item.name}
          
          span(id="next_date" + item.id style="font-weight: normal;font-size: 16px")= (item.next_date) ? " >" + item.next_date : ""

          span(style="font-weight: normal;float: right; padding-right: 5px;font-size: 16px") Bestand: 
            span(id="sum" + item.id) #{item.sum || 0}

