div.prod(id="prod" + item.id)
  .box
    .single_right
      button.darkgrey(onclick="toggleDetails('" + item.id + "')")
          i.fa.fa-caret-down
          
    h2(style="text-align: left; padding-left: 5px") 
      i.fa-solid.fa-circle(style="font-size:14px;color: " + item.state)

      span(id="name" + item.id style="margin-right: 5px") #{item.name}
      
      i.fa.fa-pencil(id="pencil" title="Umbenennen" style="font-size: 14px" onclick="renameProduct('" + item.id + "')")
      span(style="font-weight: normal;float: right; padding-right: 5px;font-size: 16px") Bestand: 
        span(id="sum" + item.id) #{item.sum || 0}
