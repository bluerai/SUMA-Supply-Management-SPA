extends ../../templates/base

block content

  #transparent(onclick="hidePanels()")

  .app
    #header
      .single_left 
        img(src="/supma.png" width=52 height=52 alt="Logo")
      .single_right#dropdown
        button.darkgrey(onClick="selectCategoryPanel()")
          i.fa.fa-bars(aria-hidden="true")
        #select_category
          #category_list
          //- Inserted here: Dropdown list with categories
          p(onclick="newCategoryPanel()" style="background-color: lightgrey; text-align: center; padding: 0px; margin: 0px")
            i.fa-regular.fa-square-plus
        #new_category
          input#new_category_name(type="text" placeholder="Neue Kategorie" autofocus title="" style="padding: 10px; margin: 5px")
          i.fa-regular.fa-square-check(onclick="createCategory()")

      .single_right
        button.orange(title="Neues Produkt hinzuf√ºgen" onclick="createProdukt()")
          i.fa-solid.fa-square-plus
      h1#category_head
          //- Inserted here: Category name 
          
      #edit_category
        input#edit_category_name(type="text" placeholder="Kategorie" autofocus title=""  style="padding: 10px; margin: 5px")
        div.single_left(style="margin-left: auto; margin-right: auto;width: 50%")
          i.fa-solid.fa-trash-can(onclick="deleteCategory()")
        div.single_right(style="margin-left: auto; margin-right: auto;width: 50%")
          i.fa-regular.fa-square-check(onclick="renameCategory()")

    #prodlist
          //- Inserted here: product list 

  script(type='text/javascript').
    docReady();
